{
  "name": "test1",
  "version": "1.0.0",
  "description": "Hapi test project",
  "license": "ISC",
  "author": "",
  "type": "module",
  "engines": {
    "node": ">=24.2.0"
  },
  "main": "src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development npm run server:watch",
    "dev:debug": "NODE_ENV=development npm run server:debug",
    "docker:dev": "npm run dev",
    "docker:dev2": "NODE_ENV=development nodemon --inspect=0.0.0.0 --ext js,json --legacy-watch ./src",
    "format": "prettier --write \"**/*.{cjs,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,json,md}\"",
    "lint": "eslint --cache --cache-strategy content \"**/*.{cjs,js}\"",
    "lint:fix": "npm run lint -- --fix",
    "server:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,json --legacy-watch ./src",
    "server:watch": "nodemon --inspect=0.0.0.0 --ext js,json --legacy-watch ./src",
    "start": "NODE_ENV=production node --use-strict .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "all": "npm-run-all lint server:watch"
  },
  "dependencies": {
    "@hapi/hapi": "^21.4.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "joi": "17.13.3",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/preset-env": "7.27.2",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "eslint": "9.29.0",
    "neostandard": "0.12.1",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "vitest": "3.2.4",
    "vitest-fetch-mock": "0.4.5"
  }
}
